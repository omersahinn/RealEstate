@model IEnumerable<RealEstate.Models.Language>
@using RealEstate.HtmlHelpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/Site.cshtml";
}

<div class="portlet x12">
    <div class="portlet-header">
        <h4>@Html.Language("", "LanguageTitle")</h4>
        <div id="info">
            <div class="buttonrow">
                <a href='@Url.Action("Create",new { PageIndex=this.Url.RequestContext.RouteData.Values["PageIndex"]})' class="aCreate" title="@Html.Language("","LanguageCreateTitle")">
                    <input type="submit" value="@Html.Language("","Create")" />
                </a>
                <a href='@Url.Action("Search",new { PageIndex=this.Url.RequestContext.RouteData.Values["PageIndex"]})' class="aCreate" title="@Html.Language("","LanguageSearchTitle")">
                    <input type="submit" value="@Html.Language("","Search")" />
                </a>
            </div>
        </div>
        <div class="portlet-content">
            <br />
            <a name="plugin"></a>
            @{Html.RenderPartial("LanguageList", Model); }
        </div>
    </div>
</div>