@model RealEstate.Models.Page


<div id="form-wrapper">
    @using (Html.BeginForm("Create", "Page", new { PageIndex = this.Url.RequestContext.RouteData.Values["PageIndex"] }, FormMethod.Post, new { @id = "frmData" }))
    {
        @Html.ValidationSummary(true)

        <div class="edit-set">
            <div class="form-horizontal">
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.ControllerAndAction, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ControllerAndAction, new SelectList(Model.viewList, "", ""))
                        @Html.ValidationMessageFor(model => model.ControllerAndAction, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
